;キャラクタープロフィールの설정
@SET_CHARA_PROFILE, ARG
LOCAL = LINECOUNT
$INPUT_LOOP
CLEARLINE LINECOUNT - LOCAL
CALL LB
PRINTL ・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・
PRINTFORML {ARG:0}人目のキャラ『%CALLNAME:ARG%』 の외관・プロフィールを설정してください
PRINTL 
PRINTL [10]ヘアスタイルの설정
CALL SHOW_HAIRSTYLE, ARG
PRINTL 
PRINT [11]머리색の설정
PRINTPLAIN  
CALL SHOW_HAIRCOLOR, ARG
PRINTL 
PRINT [12]瞳の色の설정
PRINTPLAIN  
CALL SHOW_EYESCOLOR, ARG
PRINTL 
PRINT [13]肌の色の설정
PRINTPLAIN  
CALL SHOW_SKINCOLOR, ARG
PRINTL ・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・
PRINTL [100] 결정して돌아간다

INPUT
IF RESULT == 100
	CLEARLINE LINECOUNT - LOCAL
	RETURN
ELSEIF RESULT == 10
	CALL SET_HAIRSTYLE, ARG
	GOTO INPUT_LOOP
ELSEIF RESULT == 11
	CALL SET_HAIRCOLOR, ARG
	GOTO INPUT_LOOP
ELSEIF RESULT == 12
	CALL SET_EYESCOLOR, ARG
	GOTO INPUT_LOOP
ELSEIF RESULT == 13
	CALL SET_SKINCOLOR, ARG
	GOTO INPUT_LOOP
ELSE
	GOTO INPUT_LOOP
ENDIF


;-------------------------------------------------------------------------------------------------------------------------------------------------------------------
;ヘアスタイルの설정
@SET_HAIRSTYLE, ARG
LOCAL = LINECOUNT
$INPUT_LOOP
CLEARLINE LINECOUNT - LOCAL
PRINTL ・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・
PRINTFORML 『%CALLNAME:ARG%』 のヘアスタイルを설정してください
PRINTL 
PRINTFORML [1]前髪　　　　　　　『%CSTR:ARG:12%』
PRINTFORML [2]ヘアスタイル　　　『%CSTR:ARG:13%』
SIF TALENT:ARG:변신능력 == 1
		PRINTFORML [3]変身中　　　　　　『%CSTR:ARG:14%』
PRINTL ・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・・
PRINTL [100] 결정
PRINTL [200]ランダムに髪型を설정
INPUT
IF RESULT == 100
	CLEARLINE LINECOUNT - LOCAL
	RETURN
ELSEIF RESULT == 200
	CSTR:ARG:12 = %STR:(30000 + RAND:9)%
	CSTR:ARG:13 = %STR:(30100 + RAND:15)%
	CSTR:ARG:14 = %STR:(30100 + RAND:15)%
	CLEARLINE LINECOUNT - LOCAL
	GOTO INPUT_LOOP
ELSEIF RESULT == 1
	FOR LOCAL,0,9
		PRINTFORML  [{100 + LOCAL}]%STR:(30000 + LOCAL)%
	NEXT
	PRINTL 
	PRINTL  [999]もどる
	$INPUT_LOOP_1
	INPUT
	IF RESULT >= 100 && RESULT <= 108
		CSTR:ARG:12 = %STR:(29900 + RESULT)%
	ELSEIF RESULT == 999
		PRINTW 変更せずに戻ります
	ELSE
		GOTO INPUT_LOOP_1
	ENDIF
	CLEARLINE LINECOUNT - LOCAL
	GOTO INPUT_LOOP
ELSEIF RESULT == 2
	FOR LOCAL,0,15
		PRINTFORML  [{200 + LOCAL}]%STR:(30100 + LOCAL)%
	NEXT
	PRINTL 
	PRINTL  [999]もどる
	$INPUT_LOOP_2
	INPUT
	IF RESULT >= 200 && RESULT <= 214
		CSTR:ARG:13 = %STR:(29900 + RESULT)%
	ELSEIF RESULT == 999
		PRINTW 変更せずに戻ります
	ELSE
		GOTO INPUT_LOOP_2
	ENDIF
	CLEARLINE LINECOUNT - LOCAL
	GOTO INPUT_LOOP
ELSEIF RESULT == 3 && TALENT:ARG:변신능력 == 1
	FOR LOCAL,0,15
		PRINTFORML  [{300 + LOCAL}]%STR:(30100 + LOCAL)%
	NEXT
	PRINTL 
	PRINTL  [999]もどる
	$INPUT_LOOP_3
	INPUT
	IF RESULT >= 300 && RESULT <= 314
		CSTR:ARG:14 = %STR:(29800 + RESULT)%
	ELSEIF RESULT == 999
		PRINTW 変更せずに戻ります
	ELSE
		GOTO INPUT_LOOP_3
	ENDIF
	CLEARLINE LINECOUNT - LOCAL
	GOTO INPUT_LOOP
ELSE
	GOTO INPUT_LOOP
ENDIF





