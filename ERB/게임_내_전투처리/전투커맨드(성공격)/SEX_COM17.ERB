;애널 피스톤（Ａ계통으로부터의 파생 한정 행동）

;성 커맨드 분류
@SEX_TYPE_COM17
RETURN 삽입

@SEX_COM17,ARG = 0,ARG:1 = 0
;EX_COM	추가 고문 실행 부위（비트）
;	1：Ｃ　2：Ｖ　4：Ａ　8：Ｂ
;추가 고문
CALL SEX_COMEX_RANDOM, Ａ, ARG:1
EX_COM = RESULT:0
SH_COM = RESULT:1

INSERT |= 애널
;상태 이상：강구속
SIF (TCVARn:12 & 강구속) == 0
	CALL STATE_CHANGE_PKOUSOKU, 100

;성기 가리개가 남아있는 경우 Ｖ추가 공격 플래그를 접는다
SIF CFLAG:42 == 398 && CLOTH_INNER_PER > 0 && (EX_COM & 질)
	EX_COM -= 질
;애널 플레이는 V삽입을 하지 않을 경우
SIF CONFIG_CHECK_OTHER_F(4) > 0 && (EX_COM & 질)
	EX_COM -= 질

;청순파라면 한 번만 자동으로 Ｖ방어
SIF TALENT:청순파 > 0 && TCVARn:2 != 100 && (EX_COM & 질)
	CALL AUTO_V_DEFENCE, TARGET

;흑화 캐릭터의 페니스 위치를 세트
SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 1 && (ISPENIS(FLAG:111))
	TFLAG:18 = 애널

;취득 파라미터 계산
;BASE값의 명시적 초기화
REPEAT 12
	LOCAL:COUNT = 0
REND

;방심도 상승
TFLAG:3 += 5

;사정치 550
CALL TENTACLE_SYASEI_UP, 550

;촉수 크기 설정
CALL SET_TENTACLE_SIZE, FLAG:10, FLAG:11, ENEMY_TYPE_CHECK_F("AKUOTI"), FLAG:111, 17

;쾌Ａ　감각이 낮을 때는 적다
IF CONFIG_CHECK_BALANCE_F(7) == 0
	IF ABL:Ａ감각 == 0
		LOCAL:2 = 8
	ELSEIF ABL:Ａ감각 == 1
		LOCAL:2 = 50
	ELSEIF ABL:Ａ감각 == 2
		LOCAL:2 = 200
	ELSEIF ABL:Ａ감각 == 3
		LOCAL:2 = 400
	ELSEIF ABL:Ａ감각 == 4
		LOCAL:2 = 1000
	ELSEIF ABL:Ａ감각 >= 5
		LOCAL:2 = 2000
	ENDIF
;컨피그 ON이라면 쾌Ａ 증가
ELSEIF CONFIG_CHECK_BALANCE_F(7) > 0
	IF ABL:Ａ감각 == 0
		LOCAL:2 = 40
	ELSEIF ABL:Ａ감각 == 1
		LOCAL:2 = 100
	ELSEIF ABL:Ａ감각 == 2
		LOCAL:2 = 200
	ELSEIF ABL:Ａ감각 == 3
		LOCAL:2 = 400
	ELSEIF ABL:Ａ감각 == 4
		LOCAL:2 = 1000
	ELSEIF ABL:Ａ감각 >= 5
		LOCAL:2 = 2000
	ENDIF
ENDIF
;메인 부위 절정 예정의 예측
CALL PALAM_VABCestimate(LOCAL,2,-1)


IF ENEMY_TYPE_CHECK_F("MOB") == 1 || ENEMY_TYPE_CHECK_F("CITIZEN") == 1
	TRYCALLFORM MESSAGE_MOB_{ARG}_COM17, EX_COM, SH_COM
ELSE
	;지문: 세뇌/흑화 캐릭터가 조작 캐릭터에게 애널 피스톤을 했다
	SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 1
		CALL MESSAGE_OTHER_SEX_COM17
	;지문: COM17
	CALL MESSAGE_SEX_COM17, EX_COM, SH_COM
ENDIF

;결계에 따른 촉수 개수의 변동
CALL SET_TENTACLE_POOL
;의상에의 피해
CALL CLOTH_BATTLE_DAMAGE, 2

;BASE
EXP:Ａ경험 += 1
SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 0 && INCEST_F(TARGET, FLAG:10 * 100 + FLAG:11, 1) > 0
	EXP:근친교배경험 += 1
SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 1 && INCEST_F(TARGET, FLAG:111) > 0
	EXP:근친교배경험 += 1


;공순
IF ABL:순종 <= 2
	LOCAL:5 = 20
ELSEIF ABL:순종 == 3
	LOCAL:5 = 50
ELSEIF ABL:순종 == 4
	LOCAL:5 = 100
ELSEIF ABL:순종 >= 5
	LOCAL:5 = 200
ENDIF

;습득
IF ABL:봉사정신 == 0
	LOCAL:6 = 10
ELSEIF ABL:봉사정신 == 1
	LOCAL:6 = 25
ELSEIF ABL:봉사정신 == 2
	LOCAL:6 = 50
ELSEIF ABL:봉사정신 == 3
	LOCAL:6 = 100
ELSEIF ABL:봉사정신 == 4
	LOCAL:6 = 250
ELSEIF ABL:봉사정신 >= 5
	LOCAL:6 = 500
ENDIF

;굴복　Ａ감각에 의존
IF ABL:Ａ감각 == 0
	LOCAL:8 = 20
ELSEIF ABL:Ａ감각 == 1
	LOCAL:8 = 40
ELSEIF ABL:Ａ감각 == 2
	LOCAL:8 = 100
ELSEIF ABL:Ａ감각 == 3
	LOCAL:8 = 200
ELSEIF ABL:Ａ감각 == 4
	LOCAL:8 = 400
ELSEIF ABL:Ａ감각 >= 5
	LOCAL:8 = 900 + ABL:Ａ감각 * 20
ENDIF

;윤활이 낮으면 고통이 들어간다
IF PALAM:윤활 < 1000
	LOCAL:10 += 1000
ELSEIF PALAM:윤활 < 2000
	LOCAL:10 += 200
ENDIF

;Ａ감각이 낮으면 공포가 들어간다
IF ABL:Ａ감각 == 0
	LOCAL:11 = 200
ELSEIF ABL:Ａ감각 == 1
	LOCAL:11 = 100
ELSEIF ABL:Ａ감각 == 2
	LOCAL:11 = 50
ELSEIF ABL:Ａ감각 == 3
	LOCAL:11 = 20
ELSE
ENDIF

;추가 고문 실행
IF EX_COM
	CALL SEX_COMEX, Ａ, 1, EX_COM | SH_COM
	REPEAT 12
		LOCAL:COUNT += RESULT:COUNT
	REND
ENDIF

;대량 사정 가능하면 피니쉬로 이행
IF FLAG:15 >= FLAG:14 * 2
	TFLAG:17 = 18
;Ｖ추가 고문이 서 있으면 양 구멍 피스톤으로 이행
ELSEIF (EX_COM & Ｖ) && FLAG:15 >= FLAG:14 && BASE:Ｖ결계내구력 == 0 && TCVARn:2 != 자세：Ｖ방어 && (ENEMY_TYPE_CHECK_F("MOB") == 0 && ENEMY_TYPE_CHECK_F("CITIZEN") == 0) && ISFEMALE()
	TFLAG:17 = 19
;그 이외라면 애널 피스톤 속행
ELSE
	TFLAG:17 = 17
ENDIF
;촉수의 행동을 기록
TFLAG:20 = 17

;습득 기본값
LOCAL:6 += 200

;욕정 기본값
LOCAL:7 += 100

;굴복 기본값
LOCAL:8 += 400

;치정 기본값
LOCAL:9 += 200

;고통 기본값
LOCAL:10 += 100

;공포 기본값
LOCAL:11 += 50

;체력 소비 기본값
LOCAL:12 += 1

;계산으로
CALL PALAM_CAL, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12
