;Ｃ공격（강）

;성 커맨드 분류
@SEX_TYPE_COM1
RETURN 통상

@SEX_COM1,ARG = 0,ARG:1 = 0
;EX_COM	추가 고문 실행 부위（비트）
;	1：Ｃ　2：Ｖ　4：Ａ　8：Ｂ
;추가 고문
CALL SEX_COMEX_RANDOM, Ｃ, ARG:1
EX_COM = RESULT:0
SH_COM = RESULT:1

;취득 파라미터 계산
;BASE값의 명시적 초기화
REPEAT 12
	LOCAL:COUNT = 0
REND

;방심도 상승
TFLAG:3 += 25

;사정치 50
CALL TENTACLE_SYASEI_UP, 50

;촉수 크기 설정
CALL SET_TENTACLE_SIZE, FLAG:10, FLAG:11, ENEMY_TYPE_CHECK_F("AKUOTI"), FLAG:111, 1

;쾌Ｃ
IF ABL:Ｃ감각 == 0
	LOCAL:0 = 800
ELSEIF ABL:Ｃ감각 == 1
	LOCAL:0 = 1500
ELSEIF ABL:Ｃ감각 == 2
	LOCAL:0 = 3500
ELSEIF ABL:Ｃ감각 == 3
	LOCAL:0 = 6000
ELSEIF ABL:Ｃ감각 == 4
	LOCAL:0 = 10000
ELSEIF ABL:Ｃ감각 >= 5
	LOCAL:0 = 20000
ENDIF
;페니스가 있다면 효과가 크다
SIF ISMANLY() || TALENT:후타나리 > 0
	LOCAL:0 += 1000
;메인 부위 절정 예정의 예측
CALL PALAM_VABCestimate(LOCAL,0,-1)


IF ENEMY_TYPE_CHECK_F("MOB") == 1 || ENEMY_TYPE_CHECK_F("CITIZEN") == 1
	TRYCALLFORM MESSAGE_MOB_{ARG}_COM1, EX_COM, SH_COM
ELSE
	;지문: 세뇌/흑화 캐릭터가 조작 캐릭터에게 Ｃ공격（강）을 했다
	SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 1
		CALL MESSAGE_OTHER_SEX_COM1
	;지문: COM1
	CALL MESSAGE_SEX_COM1, EX_COM, SH_COM
ENDIF

;결계에 따른 촉수 개수의 변동
CALL SET_TENTACLE_POOL
;의상에의 피해
CALL CLOTH_BATTLE_DAMAGE, 8

;BASE


;Ｃ감각과 윤활이 낮으면 고통이 조금 들어간다
SIF ABL:Ｃ감각 < 3 && PALAM:윤활 < 1000
	LOCAL:10 = 200

;추가 고문 실행
IF EX_COM
	CALL SEX_COMEX, Ｃ, 1, EX_COM | SH_COM
	REPEAT 12
		LOCAL:COUNT += RESULT:COUNT
	REND
ENDIF

;행동 예약 없음
TFLAG:17 = -1
;촉수의 행동을 기록
TFLAG:20 = 1

;습득 기본값
LOCAL:6 += 1000

;욕정 기본값
LOCAL:7 += 0

;굴복 기본값
LOCAL:8 += 1000

;치정 기본값
LOCAL:9 += 50

;고통 기본값
LOCAL:10 += 100

;공포 기본값
LOCAL:11 += 50

;체력 소비 기본값
LOCAL:12 += 100

;계산으로
CALL PALAM_CAL, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12
