;애널 피니쉬（Ａ계통으로부터의 파생 한정 행동）

;성 커맨드 분류
@SEX_TYPE_COM18
RETURN 삽입

@SEX_COM18,ARG = 0,ARG:1 = 0
;EX_COM	추가 고문 실행 부위（비트）
;	1：Ｃ　2：Ｖ　4：Ａ　8：Ｂ
;추가 고문
CALL SEX_COMEX_RANDOM, Ａ, ARG:1
EX_COM = RESULT:0
SH_COM = RESULT:1

;사정 부위 플래그:애널을 세운다
TFLAG:4 = TFLAG:4 | 애널
INSERT = INSERT | 애널
;촉수를 쓰고 있다면 손과 입을 세운다
IF (FLAG:110 == 1) && ISTENTACLER(FLAG:111) == 0 && (TALENT:(FLAG:111):후타나리 > 0 || ISMALE(FLAG:111))
ELSE
	TFLAG:4 = TFLAG:4 | 손
	TFLAG:4 = TFLAG:4 | 입
ENDIF
;Ｂ추가 공격이 있다면 가슴을 세운다
SIF (EX_COM & Ｂ)
	TFLAG:4 = TFLAG:4 | 가슴
;Ｖ추가 공격이 있다면 균열을 세운다
SIF (EX_COM & Ｖ)
	TFLAG:4 = TFLAG:4 | 균열

;흑화 캐릭터의 페니스 위치를 세트
SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 1 && (ISPENIS(FLAG:111))
	TFLAG:18 = 애널

;취득 파라미터 계산
;BASE값의 명시적 초기화
REPEAT 12
	LOCAL:COUNT = 0
REND

;방심도 상승
TFLAG:3 += 200

;사정치 1150
CALL TENTACLE_SYASEI_UP, 1150

;촉수 크기 설정
CALL SET_TENTACLE_SIZE, FLAG:10, FLAG:11, ENEMY_TYPE_CHECK_F("AKUOTI"), FLAG:111, 18


;쾌Ａ
IF CONFIG_CHECK_BALANCE_F(7) == 0
	IF ABL:Ａ감각 == 0
		LOCAL:2 = 920
	ELSEIF ABL:Ａ감각 == 1
		LOCAL:2 = 2750
	ELSEIF ABL:Ａ감각 == 2
		LOCAL:2 = 8000
	ELSEIF ABL:Ａ감각 == 3
		LOCAL:2 = 11000
	ELSEIF ABL:Ａ감각 == 4
		LOCAL:2 = 14000
	ELSEIF ABL:Ａ감각 >= 5
		LOCAL:2 = 20000
	ENDIF
;컨피그 ON이라면 쾌Ａ 증가
ELSEIF CONFIG_CHECK_BALANCE_F(7) > 0
	IF ABL:Ａ감각 == 0
		LOCAL:2 = 4600
	ELSEIF ABL:Ａ감각 == 1
		LOCAL:2 = 5500
	ELSEIF ABL:Ａ감각 == 2
		LOCAL:2 = 8000
	ELSEIF ABL:Ａ감각 == 3
		LOCAL:2 = 11000
	ELSEIF ABL:Ａ감각 == 4
		LOCAL:2 = 14000
	ELSEIF ABL:Ａ감각 >= 5
		LOCAL:2 = 20000
	ENDIF
ENDIF
;메인 부위 절정 예정의 예측
CALL PALAM_VABCestimate(LOCAL,2,-1)



IF ENEMY_TYPE_CHECK_F("MOB") == 1 || ENEMY_TYPE_CHECK_F("CITIZEN") == 1
	TRYCALLFORM MESSAGE_MOB_{ARG}_COM18, EX_COM, SH_COM
ELSE
	;지문: 세뇌/흑화 캐릭터가 조작 캐릭터에게 애널 피니쉬를 했다
	SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 1
		CALL MESSAGE_OTHER_SEX_COM18
	;지문: COM18
	CALL MESSAGE_SEX_COM18, EX_COM, SH_COM
ENDIF

;결계에 따른 촉수 개수의 변동
CALL SET_TENTACLE_POOL
;의상에의 피해
CALL CLOTH_BATTLE_DAMAGE, 2

;BASE
EXP:Ａ경험 += 1
SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 0 && INCEST_F(TARGET, FLAG:10 * 100 + FLAG:11, 1) > 0
	EXP:근친교배경험 += 1
SIF ENEMY_TYPE_CHECK_F("AKUOTI") == 1 && INCEST_F(TARGET, FLAG:111) > 0
	EXP:근친교배경험 += 1



;공순
IF ABL:순종 <= 2
	LOCAL:5 = 300
ELSEIF ABL:순종 == 3
	LOCAL:5 = 750
ELSEIF ABL:순종 == 4
	LOCAL:5 = 1500
ELSEIF ABL:순종 >= 5
	LOCAL:5 = 3000
ENDIF

;습득
IF ABL:봉사정신 == 0
	LOCAL:6 = 10
ELSEIF ABL:봉사정신 == 1
	LOCAL:6 = 25
ELSEIF ABL:봉사정신 == 2
	LOCAL:6 = 50
ELSEIF ABL:봉사정신 == 3
	LOCAL:6 = 100
ELSEIF ABL:봉사정신 == 4
	LOCAL:6 = 250
ELSEIF ABL:봉사정신 >= 5
	LOCAL:6 = 500
ENDIF

;윤활이 낮으면 고통이 들어간다
IF PALAM:윤활 < 1000
	LOCAL:10 += 1000
ELSEIF PALAM:윤활 < 2000
	LOCAL:10 += 200
ENDIF

;Ａ감각이 낮으면 공포가 들어간다
IF ABL:Ａ감각 == 0
	LOCAL:11 = 4000
ELSEIF ABL:Ａ감각 == 1
	LOCAL:11 = 2000
ELSEIF ABL:Ａ감각 == 2
	LOCAL:11 = 1000
ELSEIF ABL:Ａ감각 == 3
	LOCAL:11 = 400
ELSE
ENDIF

;추가 고문 실행
IF EX_COM
	CALL SEX_COMEX, Ａ, 1, EX_COM | SH_COM
	REPEAT 12
		LOCAL:COUNT += RESULT:COUNT
	REND
ENDIF

;행동 예약 없음
TFLAG:17 = -1
;촉수의 행동을 기록
TFLAG:20 = 18

;강구속 상태를 해제
SIF (TCVARn:12 & 강구속)
	TCVARn:12 -= 강구속

;습득 기본값
LOCAL:6 += 50

;욕정 기본값
LOCAL:7 += 1000

;굴복 기본값
LOCAL:8 += 4000

;치정 기본값
LOCAL:9 += 1000

;고통 기본값
LOCAL:10 += 0

;공포 기본값
LOCAL:11 += 1500

;체력 소비 기본값
LOCAL:12 += 500

;계산으로
CALL PALAM_CAL, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12
